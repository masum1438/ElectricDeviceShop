
<div id="dvModalEquipment" style="display: none;">
    <div class="row">
        <div class="col col-12">
            <form action="@Url.Action("Dashboard","Inventory")" method="post">
                <input type="hidden" name="hdSelectedEquipmentID" id="hdSelectedEquipmentID" />
                <input type="hidden" name="hdSelectedOpType" id="hdSelectedOpType" />
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                    <input type="text" id="txtName" name="txtName" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Quantity</span>
                    <input type="text" id="txtQuantity" name="txtQuantity" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Entry Date</span>
                    <input type="text" id="txtEntryDate" name="txtEntryDate" class="form-control clsDateTime" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Receive Date</span>
                    <input type="text" id="txtReceiveDate" name="txtReceiveDate" class="form-control clsDateTime" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>

                <input id="btnSave" type="submit" value="Save" />
            </form>

        </div>
    </div>
</div>

